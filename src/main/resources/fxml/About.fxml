<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.TextFlow?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.shape.Box?>
<?import javafx.scene.control.skin.TitledPaneSkin.TitleRegion?>
<?import javafx.scene.layout.Region?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      prefHeight="300.0" prefWidth="600.0"
      fx:controller="sdm.project.guicomponents.controllers.AboutController"
      fx:id="vbox" styleClass="about" spacing="15" alignment="CENTER">

    <TitleRegion>
        <Region>

        </Region>
    </TitleRegion>
        <Label text="Authors: Massimo Palmisano, Tibor Racman and Luca Raveri" minWidth="${vbox.prefWidth}"/>
        <TextFlow fx:id="credits" minWidth="${vbox.prefWidth}"/>



    <ImageView>
        <Image smooth="true" url="/images/github.png" preserveRatio="true" requestedHeight="120"/>
    </ImageView>

</VBox>
